/* pages/goodes_list/index.wxss */
.good_nav {
  width: 100%;
  margin-top: 5rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 3rpx solid #DEE1E6;
}



.good_list .good_img{
  flex: 3;
  text-align: center;
}

.good_list .good_img image{
  width: 80%;
  height: 200rpx;
}

.good_list .good_info {
  flex: 5;
  text-align: left;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.good_wenzi{
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.good_price{
  color: red;
}